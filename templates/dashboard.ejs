<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Drivenmetrics</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: #0a0a0a;
            color: #ffffff;
            min-height: 100vh;
        }
        
        /* Header */
        .header {
            background: #1a1a1a;
            border-bottom: 1px solid #2a2a2a;
            padding: 20px 0;
        }
        
        .header-content {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .logo img {
            height: 32px;
            width: auto;
        }
        
        .user-menu {
            display: flex;
            align-items: center;
            gap: 20px;
        }
        
        .user-info {
            color: #999;
            font-size: 14px;
        }
        
        .logout-btn {
            background: #2a2a2a;
            color: #ffffff;
            border: 1px solid #333;
            padding: 8px 16px;
            border-radius: 8px;
            text-decoration: none;
            font-size: 14px;
            transition: all 0.2s;
        }
        
        .logout-btn:hover {
            background: #333;
            border-color: #444;
        }
        
        /* Main Content */
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 40px 20px;
        }
        
        .welcome-section {
            margin-bottom: 40px;
        }
        
        .welcome-section h2 {
            font-size: 32px;
            margin-bottom: 10px;
        }
        
        .welcome-section p {
            color: #999;
            font-size: 18px;
        }
        
        /* Stats Grid */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            margin-bottom: 40px;
        }
        
        .stat-card {
            background: #1a1a1a;
            border: 1px solid #2a2a2a;
            border-radius: 12px;
            padding: 24px;
        }
        
        .stat-card h3 {
            font-size: 14px;
            color: #999;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 8px;
        }
        
        .stat-value {
            font-size: 32px;
            font-weight: 600;
            color: #ffffff;
        }
        
        .stat-card.active .stat-value {
            color: #4ade80;
        }
        
        /* Quick Actions */
        .quick-actions {
            margin-bottom: 40px;
        }
        
        .quick-actions h2 {
            font-size: 24px;
            margin-bottom: 20px;
        }
        
        .actions-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
        }
        
        .action-card {
            background: #1a1a1a;
            border: 1px solid #2a2a2a;
            border-radius: 12px;
            padding: 24px;
            text-decoration: none;
            color: #ffffff;
            transition: all 0.2s;
            display: flex;
            flex-direction: column;
            gap: 12px;
        }
        
        .action-card:hover {
            border-color: #0066ff;
            transform: translateY(-2px);
        }
        
        .action-icon {
            font-size: 24px;
        }
        
        .action-card h3 {
            font-size: 18px;
            font-weight: 500;
        }
        
        .action-card p {
            color: #999;
            font-size: 14px;
        }
        
        /* Integration Status */
        .integrations-section {
            background: #1a1a1a;
            border: 1px solid #2a2a2a;
            border-radius: 12px;
            padding: 32px;
        }
        
        .integrations-section h2 {
            font-size: 24px;
            margin-bottom: 24px;
        }
        
        .integration-list {
            display: flex;
            flex-direction: column;
            gap: 16px;
        }
        
        .integration-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 16px;
            background: #0a0a0a;
            border-radius: 8px;
            border: 1px solid #2a2a2a;
        }
        
        .integration-info {
            display: flex;
            align-items: center;
            gap: 12px;
        }
        
        .integration-icon {
            width: 40px;
            height: 40px;
            background: #2a2a2a;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
        }
        
        .status-badge {
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 500;
        }
        
        .status-badge.connected {
            background: #10b98133;
            color: #4ade80;
        }
        
        .status-badge.disconnected {
            background: #ef444433;
            color: #f87171;
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="header-content">
            <div class="logo">
                <img src="https://app.drivenmetrics.com/assets/images/logo/logo-text-on-dark-cropped.svg" alt="Drivenmetrics">
            </div>
            <div class="user-menu">
                <span class="user-info"><%= user.email %></span>
                <a href="/logout" class="logout-btn">Logout</a>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="container">
        <!-- Welcome Section -->
        <section class="welcome-section">
            <h2>Welcome back!</h2>
            <p>Manage your integrations and access your advertising insights.</p>
        </section>

        <!-- Stats Grid -->
        <section class="stats-grid">
            <div class="stat-card <%= has_claude ? 'active' : '' %>">
                <h3>Claude.ai Status</h3>
                <div class="stat-value"><%= has_claude ? 'Connected' : 'Not Connected' %></div>
            </div>
            <div class="stat-card <%= has_facebook ? 'active' : '' %>">
                <h3>Facebook Ads</h3>
                <div class="stat-value"><%= has_facebook ? 'Connected' : 'Not Connected' %></div>
            </div>
            <div class="stat-card">
                <h3>API Calls Today</h3>
                <div class="stat-value"><%= api_calls || '0' %></div>
            </div>
        </section>

        <!-- Quick Actions -->
        <section class="quick-actions">
            <h2>Quick Actions</h2>
            <div class="actions-grid">
                <a href="/setup/integrations" class="action-card">
                    <div class="action-icon">üîó</div>
                    <h3>Manage Integrations</h3>
                    <p>Connect or disconnect your services</p>
                </a>
                <a href="/setup/integrations" class="action-card">
                    <div class="action-icon">üîß</div>
                    <h3>Facebook Settings</h3>
                    <p>Manage your Facebook connection</p>
                </a>
                <a href="https://claude.ai/new?&open_in_browser=1" target="_blank" class="action-card">
                    <div class="action-icon">ü§ñ</div>
                    <h3>Open Claude.ai</h3>
                    <p>Use Claude in your browser</p>
                </a>
            </div>
        </section>

        <!-- Claude.ai Integration -->
        <section class="integrations-section" style="margin-bottom: 40px; background: #0066ff1a; border-color: #0066ff;">
            <h2>ü§ñ Claude.ai Integration</h2>
            
            <% if (!has_facebook) { %>
                <p style="color: #f87171;">‚ö†Ô∏è Please connect your Facebook account first to use Drivenmetrics with Claude.ai</p>
            <% } else if (!api_token || api_token === 'dmgt_demo_token') { %>
                <p>Your Facebook account is connected. Now you can generate an API token for Claude.ai.</p>
                <button onclick="connectClaude()" class="primary" style="margin-top: 20px; font-size: 18px; padding: 16px 32px;">
                    Generate API Token
                </button>
            <% } else { %>
                <p style="color: #4ade80;">‚úÖ Your API token is ready!</p>
                <div style="margin-top: 20px; padding: 16px; background: #0a0a0a; border-radius: 8px;">
                    <p style="margin-bottom: 12px;"><strong>Your API token:</strong></p>
                    <code id="apiToken" style="background: #2a2a2a; padding: 12px; border-radius: 4px; display: block; word-break: break-all; font-family: monospace; user-select: all;">
                        <%= api_token %>
                    </code>
                    <button onclick="copyToken()" style="margin-top: 12px; background: #2a2a2a; border: 1px solid #444;">
                        üìã Copy Token
                    </button>
                    <button onclick="regenerateToken()" style="margin-top: 12px; margin-left: 8px; background: #2a2a2a; border: 1px solid #444;">
                        üîÑ Regenerate Token
                    </button>
                    
                    <h4 style="margin-top: 24px; margin-bottom: 12px;">How to connect Claude.ai:</h4>
                    <ol style="margin-left: 20px; color: #999; line-height: 1.8;">
                        <li>Open <a href="https://claude.ai/new?&open_in_browser=1" target="_blank" style="color: #0066ff;">Claude.ai</a> in your browser</li>
                        <li>Click on your name in the sidebar</li>
                        <li>Go to "Settings"</li>
                        <li>Find "Connected MCP servers" section</li>
                        <li>Click "Connect server"</li>
                        <li>Enter URL: <code style="background: #2a2a2a; padding: 2px 6px; border-radius: 4px;">https://mcp.drivenmetrics.com/mcp-api</code></li>
                        <li>Claude will redirect you to login if needed</li>
                        <li>After authorization, you can use Facebook Ads tools!</li>
                    </ol>
                    
                    <div style="margin-top: 20px; padding: 12px; background: #1a1a1a; border-radius: 8px;">
                        <p style="margin: 0; color: #999;">
                            <strong>Note:</strong> If OAuth doesn't work, you can manually use this token:<br>
                            <code style="background: #2a2a2a; padding: 4px 8px; border-radius: 4px; margin-top: 8px; display: inline-block;">
                                Authorization: Bearer <%= api_token %>
                            </code>
                        </p>
                    </div>
                </div>
            <% } %>
        </section>

        <!-- Integrations Status -->
        <section class="integrations-section">
            <h2>Integration Status</h2>
            <div class="integration-list">
                <div class="integration-item">
                    <div class="integration-info">
                        <div class="integration-icon">ü§ñ</div>
                        <div>
                            <h4>Claude.ai MCP</h4>
                            <p style="color: #999; font-size: 14px; margin-top: 4px;">
                                <%= has_claude ? 'Access granted to Claude.ai' : 'Not connected to Claude.ai' %>
                            </p>
                        </div>
                    </div>
                    <span class="status-badge <%= has_claude ? 'connected' : 'disconnected' %>">
                        <%= has_claude ? 'Active' : 'Inactive' %>
                    </span>
                </div>
                
                <div class="integration-item">
                    <div class="integration-info">
                        <div class="integration-icon">üìò</div>
                        <div>
                            <h4>Facebook Ads</h4>
                            <p style="color: #999; font-size: 14px; margin-top: 4px;">
                                <%= has_facebook ? 'Ad library access enabled' : 'Connect to access competitor ads' %>
                            </p>
                        </div>
                    </div>
                    <span class="status-badge <%= has_facebook ? 'connected' : 'disconnected' %>">
                        <%= has_facebook ? 'Connected' : 'Not Connected' %>
                    </span>
                </div>
            </div>
        </section>
    </main>
    
    <script>
        function connectClaude() {
            // Generate a new API token for this user
            fetch('/api/generate-token', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                credentials: 'same-origin'
            })
            .then(response => response.json())
            .then(data => {
                if (data.token) {
                    // Reload the page to show the new token
                    window.location.reload();
                } else {
                    alert('Error generating token. Please try again.');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error generating token. Please try again.');
            });
        }
        
        function regenerateToken() {
            if (confirm('Are you sure you want to regenerate your API token? The old token will stop working.')) {
                connectClaude();
            }
        }
        
        function copyToken() {
            const tokenElement = document.getElementById('apiToken');
            const token = tokenElement.textContent.trim();
            
            navigator.clipboard.writeText(token).then(() => {
                alert('Token copied to clipboard!');
            }).catch(err => {
                console.error('Failed to copy:', err);
                // Fallback method
                const range = document.createRange();
                range.selectNode(tokenElement);
                window.getSelection().removeAllRanges();
                window.getSelection().addRange(range);
                document.execCommand('copy');
                window.getSelection().removeAllRanges();
                alert('Token copied to clipboard!');
            });
        }
    </script>
</body>
</html>